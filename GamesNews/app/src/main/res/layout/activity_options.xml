<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".activity.OptionsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <TextView
            android:id="@+id/tv_mode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione o modo:"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <RadioGroup
            android:id="@+id/rg_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_mode_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <RadioButton
                android:id="@+id/rb_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo Dia" />

            <RadioButton
                android:layout_marginTop="-8dp"
                android:id="@+id/rb_night"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Modo Noite" />
        </RadioGroup>

        <TextView
            android:id="@+id/tv_country_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Selecione o país:"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rg_mode" />

        <AutoCompleteTextView
            android:id="@+id/actv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Selecione ou digite o país"
            android:inputType="text"
            
            android:gravity="center"
            android:textColor="@color/corTexto"
            android:textColorHighlight="@color/corTexto"
            app:layout_constraintTop_toBottomOf="@+id/tv_country_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_language_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecione a linguagem:"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/actv_country"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"/>

        <AutoCompleteTextView
            android:id="@+id/actv_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Selecione ou digite a linguagem"
            android:inputType="text"
            android:gravity="center"
            android:textColor="@color/corTexto"
            app:layout_constraintTop_toBottomOf="@+id/tv_language_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salvar"
            app:layout_constraintTop_toBottomOf="@+id/actv_language"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menu lateral -->
<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_view_options"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:itemIconSize="40dp"
    app:itemTextColor="@color/corTextoMenu"
    app:itemIconTint="@color/corTextoMenu"
    app:menu="@menu/menu_drawer" />
</androidx.drawerlayout.widget.DrawerLayout>
